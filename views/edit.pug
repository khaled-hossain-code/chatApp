extends layout

block content
    h1 Edit A Chat Room

    form(method="post")
      fieldset.form-group
        label(for="name") Name:
        input.form-control(name="name", type="text", value= room.name )
        small.text-muted Give your chat room a meaningful name
      button.btn.btn-primary(type="submit") Save Chat Room
      a.btn.btn-default(href="/admin/rooms") Cancel